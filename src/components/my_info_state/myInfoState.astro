---
import { Navbar } from "../navbar/navbar";
import { BlackHole } from "./black_hole"
import { MessageWindow } from "../message_window/message_window";
import { GeneralState } from "../state_management";

const introMessage = `Hello I'm Cheick Diallo, I love building and designing "things" on my computer and also I love Space, so why not explore my work in a space odyssey fashion.

Click the Hyper-Space button to embard on the journey or click the Worm-Hole button to jump directly to the destinations.
`

const introMessage2 = `Hello, my name is Cheick. I'm software engineer and I like art so I like to find creative and innovative solutions to the problems I come accross while maintaining the whole canvas interesting.



And also, I love space so let me show you my universe.`

---

<style>
    canvas{
        overflow: hidden;
    }
</style>

<Navbar logo={true} shortcuts={true} client:load />

